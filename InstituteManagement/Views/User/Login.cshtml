    <link rel="stylesheet" href="~/Content/styles/extras.1.1.0.min.css">
</head>
<body class="h-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 mb-1">
            </div>
            <div class="col-lg-6 mb-2">
                <div class="main-content-container container-fluid px-4">
                    <div class="page-header row no-gutters py-4">
                        <div class="col-12 col-sm-4 text-center text-sm-left mb-2">
                        </div>
                    </div>
                    <div class="card card-small mb-3">
                        <div class="card-header border-bottom">
                            <h6 class="m-0">Login</h6>
                            <strong class="text-muted d-block mb-2">Institute Management System</strong>
                            <div class="input-group mb-3">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">person</i>
                                        </span>
                                    </span>
                                    <input type="text" class="form-control" id="form1-username" placeholder="Username">
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group input-group-seamless">
                                    <input type="password" class="form-control" id="form2-password" placeholder="Password">
                                    <span class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock</i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-2">
            </div>
        </div>
    </div>

